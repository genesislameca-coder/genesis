  <script>
    var map = L.map('map').setView([17.044622, -96.653280], 18);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    // Boulder markers
    L.marker([17.044622, -96.653280])
      .addTo(map)
      .bindPopup("<b>Sigue Respirando</b><br>V3<br><a href='problem1.html'>Ver bloque</a>");

    L.marker([17.044700, -96.653500])
      .addTo(map)
      .bindPopup("<b>Otro Bloque</b><br>V4<br><a href='problem2.html'>Ver bloque</a>");

    L.marker([17.044850, -96.653650])
      .addTo(map)
      .bindPopup("<b>Tercer Bloque</b><br>V5<br><a href='problem3.html'>Ver bloque</a>");
